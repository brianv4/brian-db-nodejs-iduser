<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <title>BRIAN NODE JS</title>
</head>
<!-- http://localhost:8000/ = running web -->

<body>
    <div class="container">
        <h3 class="text-center pt-3">
            <%= title %>
        </h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Kelas</th>
                </tr>
            </thead>
            <tbody>
                <% for (let user of users) { %>
                    <tr>
                        <th scope="row">
                            <%= user.id %>
                        </th>
                        <th scope="row">
                            <%= user.nama %>
                        </th>
                        <th scope="row">
                            <%= user.kelas %>
                        </th>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <form action="/tambah" method="post">
            <h4 class="pt-3 pb-1">TAMBAH MURID BARU</h4>
            <div class="row mb-3">
                <label for="nama" class="col-sm-2 col-form-label">Nama Lengkap</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nama" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="kelas" class="col-sm-2 col-form-label">Kelas</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="kelas" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary" value="tambahkan">TAMBAH</button>
        </form>
        <a class="float-end mb-4" href="/chat">FORUM DISKUSI</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>